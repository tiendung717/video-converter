<?xml version="1.0" encoding="utf-8"?>
<com.alticode.framework.ui.custom.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/sample" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_video_remove"
            app:tint="?colorControlNormal"
            tools:tint="?android:colorControlNormal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_alignStart="@id/tvName"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:background="@drawable/background_video_metadata"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="00:20:30" />
    </androidx.cardview.widget.CardView>


</com.alticode.framework.ui.custom.SquareRelativeLayout>