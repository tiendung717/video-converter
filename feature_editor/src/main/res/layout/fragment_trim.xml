<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/trimSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:thumbRadius="6dp"
            app:trackHeight="2dp"
            app:labelBehavior="gone"
            android:layout_marginHorizontal="12dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTrimStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trimSlider"
            android:layout_alignStart="@id/trimSlider"
            android:textColor="@color/white"
            tools:text="00:00:00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTrimEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trimSlider"
            android:layout_alignTop="@id/tvTrimStart"
            android:layout_alignEnd="@id/trimSlider"
            android:textColor="@color/white"
            tools:text="00:00:00" />
    </RelativeLayout>
</layout>